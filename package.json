{
  "name": "web-scraper",
  "version": "1.0.0",
  "main": "index.ts",
  "repository": "git@github.com:lkcozy/web-scraper.git",
  "author": "Kan Luo <lkklcozy@gmail.com>",
  "description": "A simple web scraping with Puppeteer in TypeScript",
  "license": "MIT",
  "scripts": {
    "start": "tsc-watch --onSuccess \"node ./dist/index.js\"",
    "serve": "yarn node dist/index.js",
    "build": "tsc",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write --loglevel warn",
    "lint:all:format": "yarn format \"**/*.{tsx,ts,json,css,scss,html,md}\""
  },
  "dependencies": {
    "@actions/core": "^1.4.0",
    "puppeteer": "^10.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.28.5",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.0",
    "husky": "^4.3.8",
    "prettier": "^2.3.0",
    "pretty-quick": "^3.1.0",
    "tsc-watch": "^4.4.0",
    "typescript": "^4.3.0"
  }
}
